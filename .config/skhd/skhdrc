# SWITCH FOCUS B/W WINDOW
shift + ctrl - j : yabai -m window --focus south
shift + ctrl - k : yabai -m window --focus north
shift + ctrl - h : yabai -m window --focus west 
shift + ctrl - l : yabai -m window --focus east 

# MOVE WINDOWS AROUND
shift + cmd - h : yabai -m window --warp west
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east

# SWITCH FOCUS B/W MONITOR 
alt - h : yabai -m display --focus west
alt - l : yabai -m display --focus east 

#  MOVE STUFF ACROSS MONITOR
shift + alt - l : yabai -m window --display east; yabai -m display --focus east;
shift + alt - h : yabai -m window --display west; yabai -m display --focus west;

# ARANGE: WINDOWS - FLIPS
shift + ctrl - x : yabai -m space --mirror y-axis
shift + ctrl - y : yabai -m space --mirror x-axis

shift + ctrl - d : yabai -m window --toggle float --grid 4:4:1:1:2:2

shift + ctrl - z : yabai -m window --toggle zoom-fullscreen
shift + ctrl - e : yabai -m space --balance 

# RESIZE WINDOW SIZE
shift + alt - a : yabai -m window --resize left:-20:0
shift + alt - s : yabai -m window --resize bottom:0:20
shift + alt - w : yabai -m window --resize top:0:-20
shift + alt - d : yabai -m window --resize right:20:0

shift + cmd - a : yabai -m window --resize left:20:0
shift + cmd - s : yabai -m window --resize bottom:0:-20
shift + cmd - w : yabai -m window --resize top:0:20
shift + cmd - d : yabai -m window --resize right:-20:0

